<style>
  .btn-sign{
    color: white;
  }
</style>

<div class="container text-center">
  <div class="row" style="padding-bottom: 20px">
    <div class="col-xs-4 col-xs-offset-4">

      <%= render "devise/shared/links" %>

      <h2>Sign up</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :method => :post) do |f| %>
         <%= f.error_notification %>

      <div class="form-inputs">

       <%= f.input :first_name, required: true, autofocus: true, placeholder: "ex: Rhea" %>
        <%= f.input :last_name, required: true, autofocus: true, placeholder: "ex: Akiki" %>

        <%= f.input :email, required: true, autofocus: true, placeholder: "enter your email address" %>
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: "***********" %>
        <%= f.input :password_confirmation, required: true, placeholder: "***********" %>
        <%= f.input :username, required: true, autofocus: true, placeholder: "ex: Rheaakiki" %>
        <%= f.input :phone_number, required: true, autofocus: true, placeholder: "+33611865203" %>
        <%= f.input :biography, required: true, autofocus: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", :class => 'rhea-button btn btn-lg btn-show btn-sign' %>
      </div>
      <% end %>

    </div>
  </div>
</div>
