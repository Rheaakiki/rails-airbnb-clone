<style>
  .image_home {
    height: 100px;
    position: center;
  }

  .banner-show {
    color: black;
  }

  .btn-show{
    background-color: #289e4e;
    border-radius: 20px;
    margin: 0 auto;
  }

.btn-show a{
  color: white;
}

.rhea-color {
  color: #525252;
}

.card-profile {
  font-size: 50px;
}

.height-container {
  margin-top: 50px;
}

.centering{
  margin: 0 auto;
}
</style>

<div class="container height-container">
  <div class="row">
    <div class="col-xs-6">
      <i class="fa fa-address-card-o card-profile" aria-hidden="true" style=></i>
    <h1><%=@user.username%>'s profile</h1>
        <button class="btn btn-lg btn-show rhea-button">
          <%= link_to "Edit My Profile", edit_user_registration_path %>
        </button>
    </div>
    <div class="col-xs-6">
    <h2><b>My Profile</b></h2>
    <h2><%= @user.first_name %></h2>
    <h2><%= @user.last_name%></h2>
    <h3><%= @user.email %></h3>
    <h3><%= @user.phone_number %></h3>
    <h3><%= @user.biography %></h3>
    <h2><b>All My Bookings</b></h2>

    <% current_user.bookings.each do |booking| %>
    <%= booking.field.title %>
    <%= booking.date %>
    <% end  %>

    </div>
  </div>
</div>

<div class="banner banner-show">
  <div class="text-center rhea-color">
    <% avatar_url = current_user.facebook_picture_url || %>

    <%= link_to user_profile_path(current_user) do %>
    <%= image_tag avatar_url, :class => "image_home" %><%= t(".profile") %>
    <% end %>



  </div>
</div>
<div class="container">
  <div class="card">
    <div class="row">
      <div class="col-xs-4 col-xs-offset-4">
      </div>
    </div>
  </div>
</div>
