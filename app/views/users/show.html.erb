<style>
  .image_home {
    height: 100px;
    position: center;
  }

  .banner-show {
    color: black;
  }

  .btn-show{
    background-color: #289e4e;
    border-radius: 20px;
    margin: 0 auto;
  }

.btn-show a{
  color: white;
}

.rhea-color {
  color: #525252;
}

.card-profile {
  font-size: 120px;
}

.rhea-button {
  margin-top: 30px;
}

.fa-envelope-open-o {
  font-size: 20px;
}

.fa-phone {
  font-size: 20px;
}

.fa-pencil {
  color: white;
}
</style>

<div class="container">
  <div class="row">
    <div class="col-xs-6" style="margin-top: 200px">
      <i class="fa fa-address-card-o card-profile" aria-hidden="true" style="margin-left: 100px"></i>
    <h1 style="margin-left: 0px"><%=@user.username%>'s profile</h1>
        <button class="btn btn-lg btn-show rhea-button centering" style="margin-left: 79px"><i class="fa fa-pencil" aria-hidden="true"></i>
          <%= link_to "Edit My Profile", edit_user_registration_path %>
        </button>
    </div>
    <div class="col-xs-6 text-center" style="margin-top: 100px">
    <h2><b>My Profile</b></h2>
    <h2><%= @user.first_name %></h2>
    <h2><%= @user.last_name%></h2>
    <h3><i class="fa fa-envelope-open-o" aria-hidden="true"></i> <%= @user.email %></h3>
    <h3><i class="fa fa-phone" aria-hidden="true"></i> <%= @user.phone_number %></h3>
    <h3><%= @user.biography %></h3>
    <h2><b>All My Bookings</b></h2>

    <% current_user.bookings.each do |booking| %>
    <h4><b><i class="fa fa-calendar" aria-hidden="true"></i>  Field: </b><%= booking.field.title %></h4>
    <h4><b>Date: </b><%= booking.date %></h4>
    <% end  %>

    </div>
  </div>
</div>

<div class="banner banner-show">
  <div class="text-center rhea-color">
    <% avatar_url = current_user.facebook_picture_url || %>

    <%= link_to user_profile_path(current_user) do %>
    <%= image_tag avatar_url, :class => "image_home" %><%= t(".profile") %>
    <% end %>



  </div>
</div>
<div class="container">
  <div class="card">
    <div class="row">
      <div class="col-xs-4 col-xs-offset-4">
      </div>
    </div>
  </div>
</div>
